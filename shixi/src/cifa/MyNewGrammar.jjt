void StatementSentence() :
{
  Token to = null;
  Variable va = new Variable();
  String ty = null;
}
{
  ty = Type()
  to = Identifier()
  {
    va = new Variable(ty, to);
    Vt.addWithCheck(va);
    ST.setVariableTable(Vt);
  }
  (
    < DH >
    to = Identifier()
    {
      va = new Variable(ty, to);
      Vt.addWithCheck(va);
      ST.setVariableTable(Vt);
    }
  )*
}

