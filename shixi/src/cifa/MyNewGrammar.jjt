// 修改点：使用 Booler() 替换 Condition() 以支持 && 和 ||
// 修改点：修复 ELSE 回填的索引错误
void ConditionSentence() :
{
  ConditionValue cValue = new ConditionValue();
  int index;
}
{
  < IF > "(" cValue = Booler() ")"
  {
    cValue.backpatchTrueChain(QTInfo.size + 1);
  }
  SentenceBlock()
  {
    cValue.backpatchFalseChain(QTInfo.size + 1);
  }
  (
    LOOKAHEAD(1)
    < ELSE >
    {
      // 生成跳过 ELSE 块的跳转指令
      QTInfo qtInfo = new QTInfo("j", "_", "_", "F");
      index = QTInfo.size; // 记录这条跳转指令的索引（list 下标）
      qtList.addQTInfo(qtInfo);

      // 这里的 FalseChain 是 IF 条件失败时跳过来的位置，应该跳到 ELSE 块开始（即当前位置+1）
      cValue.backpatchFalseChain(QTInfo.size + 1);
    }
    SentenceBlock()
    {
      // 回填跳过 ELSE 块的那个指令，使其跳到整个 IF-ELSE 之后
      qtInfo = qtList.get(index); // 修正：应该是 index，不是 index-1
      qtInfo.setResult(QTInfo.size + 1);
    }
  )?
}

void LoopSentence() :
{
  ConditionValue cValue = new ConditionValue();
  int index;
}
{
  < WHILE > "("
  {
    index = QTInfo.size + 1;
  }
  cValue = Booler() ")"
  {
    cValue.backpatchTrueChain(QTInfo.size + 1);
  }
  SentenceBlock()
  {
    QTInfo qtInfo = new QTInfo("j", "_", "_", index);
    qtList.addQTInfo(qtInfo);
    cValue.backpatchFalseChain(QTInfo.size + 1);
  }
}

ConditionValue Condition() :
{
  String e1 = null;
  String e2 = null;
  Token r = null;
  ConditionValue cValue = new ConditionValue();
}
{
  (
    e1 = Expression()
  )?
  (
    r = Rop() e2 = Expression()
  )?
  {
    if (r == null || e1 == null)
    {
      if (e1 == null)
      {
        QTInfo qtInfo = new QTInfo("jnz", "_", "_", "T");
        qtList.addQTInfo(qtInfo);
        cValue.mergeTrue(qtInfo);
      }
      else
      {
        QTInfo qtInfo = new QTInfo("jnz", e1, "_", "T");
        qtList.addQTInfo(qtInfo);
        cValue.mergeTrue(qtInfo);
      }
    }
    else
    {
      QTInfo qtInfo = new QTInfo("j" + r.image, e1, e2, "T");
      qtList.addQTInfo(qtInfo);
      cValue.mergeTrue(qtInfo);
    }
   QTInfo qtInfo = new QTInfo("j", "_", "_", "F");
    qtList.addQTInfo(qtInfo);
    cValue.mergeFalse(qtInfo);
  }
  {
    return cValue;
  }
}

